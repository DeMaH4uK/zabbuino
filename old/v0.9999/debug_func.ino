/* ****************************************************************************************************************************
*
*  Функция получения объема свободной памяти контроллера.
*
**************************************************************************************************************************** */
int16_t freeRam(void) {
  extern uint16_t __heap_start, *__brkval;
  uint16_t v;
  return (uint16_t) &v - (__brkval == 0 ? (uint16_t) &__heap_start : (uint16_t) __brkval);
}


